{
  "compilerOptions": {
    "noImplicitAny": true,
    "noUncheckedIndexedAccess": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,

    "esModuleInterop": true,
    "sourceMap": false,
    "noUnusedLocals": true,

    "useDefineForClassFields": true,
    "isolatedModules": true,

    "baseUrl": "."
  }
}
